<a href="/movies">Go back</a>
<h2>Update "{{title}}"</h2>
<form action="/movies/{{_id}}" method="POST">
    <label for="title">Movie:</label>
    <input required type="text" name="title" id="title" value="{{this.title}}">
    <label for="genre">Genre:</label>
    <input required type="text" name="genre" id="genre" value="{{genre}}">
    <label for="plot">Plot:</label>
    <input required type="text" name="plot" id="plot" value="{{plot}}">
    <button type="submit">Send</button>
</form>